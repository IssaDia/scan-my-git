{% extends 'base.html.twig' %}
{% block title %}Analysis Result{% endblock %}

{% block body %}
    <h1 class="font-bold text-5xl text-white mt-8">RÃ©sultat d'analyse</h1>

    <div class="w-4/5">
        <div class="flex justify-end my-3">
            <button-component
                    raised
                    label="Nouvelle analyse"
                    link="{{ path('home') }}">
            </button-component>
        </div>

        {% for runner in analysis.runners %}
            <row-component key="{{ runner.id }}" dropdown open leftText="Module {{ runner.contextModule.module.name }}">
                <runner-component
                        key="child_{{ runner.id }}"
                        name="{{ runner.contextModule.module.name }}"
                        output="{{ runner.output }}">
                </runner-component>
            </row-component>
        {% endfor %}

        <div class="flex justify-end mb-8">
            <button-component
                    raised
                    label="Nouvelle analyse"
                    link="{{ path('home') }}">
            </button-component>
        </div>
    </div>
{% endblock %}
