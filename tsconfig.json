{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noResolve": true,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "jsx": "react",
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types",
        ],
        "declaration": true
    },
    "include": ["assets"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
